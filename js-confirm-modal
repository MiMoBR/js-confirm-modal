      <a onclick="functionConfirm()">Clique Aqui</a>

      <script>
        function functionConfirm() {
            var confirmBox = document.getElementById("confirm");

			confirmBox.style.display = 'block';
        }
		
		function confirmFcn(ans){
			var confirmBox = document.getElementById("confirm");

			if(ans=='y'){
				alert('foi YES');
				confirmBox.style.display = 'none';
			}else{
				alert('foi NO');
				confirmBox.style.display = 'none';
			}
		}

      </script>
